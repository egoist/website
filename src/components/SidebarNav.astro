---
import clsx from "clsx"

const nav = [
  {
    label: "home",
    href: "/",
  },
  {
    label: "about",
    href: "/about",
  },
  {
    label: "donate",
    href: "/donate",
  },
]
---

<div
  class="font-medium md:font-semibold text-sm md:text-base -ml-2 mt-5 md:mt-6 flex md:gap-0.5 md:flex-col"
>
  {
    nav.map((item) => {
      return (
        <a
          href={item.href}
          class={clsx(
            "rounded-full flex px-3 md:px-5 gap-3 h-8 md:h-12 items-center group-hover:text-zinc-900 capitalize leading-none",
            Astro.url.pathname === item.href ||
              Astro.url.pathname === `${item.href}/`
              ? "md:bg-blue-100/60 text-blue-600"
              : "hover:bg-blue-50/70"
          )}
        >
          <span>{item.label}</span>
        </a>
      )
    })
  }
</div>
